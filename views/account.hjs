        <div class="upload">
            <img src="images/noprofil.jpg" width=300 height=300 alt="">
            <div class="round">
                <input type="file">
                <i class="fa fa-camera" style="color: #fff; font-size: 30px; mrgin-top: 20px;"></i>

            </div>
        </div>
        <div class="myAccountForm1">
            <div class="formA2">
                <h1 style="font-size: 10px;">Username/Email: {{user.email}}</h1>
                <h1 style="font-size: 10px;">First Name: {{user.firstName}}</h1>
                <h1 style="font-size: 10px;">Last Name: {{user.lastName}}</h1>
                <h1 style="font-size: 10px;">Birth Day: {{user.birthday_day}}</h1>
                <h1 style="font-size: 10px;">Birth Month: {{user.birthday_month}}</h1>
                <h1 style="font-size: 10px;">Birth year: {{user.birthday_year}}</h1>
            </div>
        </div>
        <div class="myAccountForm">
            <div class="formA1">
                <form action="/Update" id="myForm" method="POST">
                   <div class="form-group">
                            <label for="firstName"><b>First Name:</b></label>
                            <input type="firstName" id="firstName" name="firstName" placeholder="Enter First Name">
                        </div>
                        <div class="form-group">
                            <label for="lastName"><b>Last Name:</b></label>
                            <input type="lastName" id="lastName" name="lastName" placeholder="Enter Last Name">
                        </div> 
                    <div class="form-group">
                        <label for="password"><b>Password:</b></label>
                        <input type="password" id="password" name="password" placeholder="">
                    </div>
                    <br>
                    <label for="birthdate"><b>Date of Birth:</b></label>
                    <br>
                    <br>
                    <fieldset id="birthdate" style="position: relative; left: 50px;">

                        <label for="birthday_day" class="offset"></label>
                        <input class="form-DOB" type="text" name="birthday_day" id="birthday_day" size="2" maxlength="2"
                            value="" placeholder="DD" />


                        <label for="birthday_month" class="offset"></label>
                        <input class="form-DOB" type="text" name="birthday_month" id="birthday_month" size="2"
                            maxlength="2" value="" placeholder="MM" />


                        <label for="birthday_year" class="offset"></label>
                        <input class="form-DOB" type="text" name="birthday_year" id="birthday_year" size="4"
                            maxlength="4" value="" placeholder="YY" />

                    </fieldset>

                    <br><br>
                    <div style="position: relative; left: 100px;">
                        <button type="submit" class="buttonstyleindex1">Update</button>
                    </div>
            </div>
            </form>

