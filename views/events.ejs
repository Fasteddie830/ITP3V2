    <!-- Trigger/Open The Modal -->
<button id="myBtn" class="myBtn">Add an event</button>

<!-- The Modal -->
<div id="myModal" class="modal">
    <span class="close">&times;</span>
    <div class="postingSystem">
        <form action="/events" METHOD="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Title"><b>Event Title:</b></label>
                <input type="text" id="Title" name="Title">
            </div>
            <br>
            <div class="form-group">
                <label for="Description"><b>Description:</b></label>
                <textarea name="Description" id="Description" cols="30" rows="5" placeholder="Enter event description here"></textarea>
            </div>

            <label for="date" style="font-size: 20px;"><b>Date of Event:</b></label>
                        <br>
                        <br>
                        <fieldset id="date" style="position: relative; left: 230px;">

                            <label for="day_day" class="offset"></label>
                            <input class="form-DOB" type="text" name="day_day" id="day_day" size="2"
                                maxlength="2" value="" placeholder="DD" />


                            <label for="day_month" class="offset"></label>
                            <input class="form-DOB" type="text" name="day_month" id="day_month" size="2"
                                maxlength="2" value="" placeholder="MM" />


                            <label for="day_year" class="offset"></label>
                            <input class="form-DOB" type="text" name="day_year" id="day_year" size="4"
                                maxlength="4" value="" placeholder="YY" />

                        </fieldset> 

            <input class="file-upload-input" id="image" name="image" value="" type="file" onchange;="readURL(this)" accept="Image/*">

                <button type="submit" class="buttonstylepost">POST</button>
     

        </form>
    </div>

</div>

    <script>
       
var modal = document.getElementById("myModal");


var btn = document.getElementById("myBtn");


var span = document.getElementsByClassName("close")[0];


btn.onclick = function() {
  modal.style.display = "block";
}


span.onclick = function() {
  modal.style.display = "none";
}


window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
    </script>

