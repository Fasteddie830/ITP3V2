<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>GCU Social Platform</title>
        <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
        <link rel="stylesheet" href="css/stylesheetlanding.css">
    </head>
    <body onload="slider()">
        <div class="banner">
            <div class="slider">
                <img src="images/gcunight.jpg" id="slideImg">
            </div>
            <div class="overlay">
                <div class="lnavbar">
                    <img src="images/GCUblacklogo.png" style = "max-height: 75px">
                    <div class="menu-icons">
                        <img src="images/instagram.png">
                        <img src="images/facebook.png">
                        <img src="images/twitter.png">
                    </div>

                </div>

                <div class="content">
                    <h1>WELCOME TO THE GCU SOCIAL PLATFORM</h1>
                    <h3>Please login if you already have an account or register if you don't have one already</h3>
                    <div>
                      <a href="login"><button type="button" class="buttonText"> LOGIN</button></a>
                      <a href="signUp"><button type="button" class="buttonText">REGISTER</button></a>
                    </div>
                </div>

            </div>
        </div>

        <script>
            var slideImg = document.getElementById("slideImg");

            var images = new Array(
                "images/landingpage/GCU1.png",
                "images/landingpage/GCU2.png",
                "images/landingpage/GCU3.png",
                "images/landingpage/GCU4.png",
                "images/landingpage/GCU5.png",
                
            );

        var len = images.length;
        var i=0;

        function slider (){
            if (i> len-1){
                i=0;
            }
            slideImg.src = images[i];
            i++;
            setTimeout('slider()',3000);
        }

        </script>

        <div class="copyright">
         <p >Group4 Â© 2022</p>
        </div>
    </body>
</html>